<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgd_white" >
    <TableRow 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        >
        <!-- 下载 -->
        <TextView 
            android:id="@+id/tv_dowmload"
            android:layout_weight="1"
	        style="@style/TextStyle"
	        android:background="@color/tv_bgd_blue"
            android:text="@string/main_download"/>

        <!-- 已下载 -->
        <TextView 
            android:id="@+id/tv_over"
            android:layout_weight="1"
	        style="@style/TextStyle"
	        android:background="@color/tv_bgd_gray"
            android:text="@string/main_over"/>
    </TableRow>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</TableLayout>
